                .item(style="background-image: url('../img/product/product-5.png')")
                .item(style="background-image: url('../img/product/product-6.png')")
            .col-xl-5
              section.catalog__content
                h3.catalog__title Хачапури по-аджарски
                p.catalog__desc хачапури по-аджарски, по имеретински,  гурийские, мигрельские
                .number-step.number-step--black.catalog__number 01 #[span / 05]
            button.catalog__arrow.catalog__arrow--prev(aria-label="Слайд назад")
            button.catalog__arrow.catalog__arrow--next(aria-label="Слайд вправо")
